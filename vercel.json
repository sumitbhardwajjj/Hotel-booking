
{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes":[
        {
            "src": "/",
            "dest": "build/index.html"
        },
        {
            "src": "/hotels",
            "dest": "index.js"
        },

        {
            "src": "/hotels(.*)",
            "dest": "index.js"
        },
        {
            "src": "/add",
            "dest": "build/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "build/$1"
        }
    ]
}